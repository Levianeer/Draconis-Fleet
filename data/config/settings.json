	"draconisExpeditionPayloadDaysVariance": 7.0,		# Random variance in payload days	#	Default : 7.0

	# --- Expedition Fleet Strength ---
	"draconisExpeditionDifficultyBase": 15.0,			# Base difficulty multiplier	#	Default : 15.0
	"draconisExpeditionDifficultyMinFactor": 0.6,		# Minimum difficulty factor (70% of base)	#	Default : 0.6
	"draconisExpeditionDifficultyMaxFactor": 0.4,		# Additional scaling with market presence (up to 50% more)	#	Default : 0.4
	"draconisExpeditionMinTotalDifficulty": 15.0,		# Minimum total difficulty (won't fire below this)	#	Default : 15.0
	"draconisExpeditionMaxTotalDifficulty": 100,		# Maximum total difficulty cap	#	Default : 100
	"draconisExpeditionLeadFleetSize": 10,				# Lead fleet difficulty/size	#	Default : 10
