{
	# ========================================
	# SYSTEM TOGGLES
	# ========================================

	"draconisEnableAICoreRaids": true,					# Enable/disable AI core raids on faction markets	#	Default : true
	"draconisEnableRemnantRaids": true,					# Enable/disable raids on Remnant installations	#	Default : true

	# ========================================
	# SHADOW FLEET PATROLS
	# ========================================
	# These are the roaming hostile fleets that spawn in systems with player markets
	# Formula: difficulty = Base + round(MarketPresence × Multiplier)

	"draconisPatrolDifficultyBase": 4,					# Base patrol difficulty	#	Default : 4
	"draconisPatrolDifficultyMult": 4.0,				# Patrol difficulty scaling with market presence	#	Default : 4.0
	"draconisMaxFleets": 12,							# Maximum concurrent patrols per system	#	Default : 12

	# ========================================
	# PUNITIVE EXPEDITIONS (COLONY CRISIS)
	# ========================================
	# These settings control the raid fleets that spawn during the Colony Crisis event
	# Formula: difficulty = FleetSizeMult × Base × (MinFactor + MaxFactor × MarketPresence)

	# --- Timing ---
	"draconisExpeditionEventFrequency": 7.0,			# How often expeditions can trigger (higher = less frequent)	#	Default : 7.0
	"draconisExpeditionPrepDaysMin": 14.0,				# Minimum days to prepare expedition	#	Default : 14.0
	"draconisExpeditionPrepDaysVariance": 14.0,			# Random variance (0 to this value) added to prep days	#	Default : 14.0
	"draconisExpeditionPayloadDaysMin": 27.0,			# Minimum days for expedition to travel/operate	#	Default : 27.0
	"draconisExpeditionPayloadDaysVariance": 7.0,		# Random variance (0 to this value) added to travel days	#	Default : 7.0

	# --- Strength ---
	"draconisExpeditionDifficultyBase": 8.0,			# Base strength multiplier	#	Default : 8.0
	"draconisExpeditionDifficultyMinFactor": 0.5,		# Minimum difficulty factor (always applied)	#	Default : 0.5
	"draconisExpeditionDifficultyMaxFactor": 1.5,		# Maximum difficulty factor (scales with player presence)	#	Default : 1.5
	"draconisExpeditionMinTotalDifficulty": 10,			# Minimum total difficulty to spawn expedition	#	Default : 10
	"draconisExpeditionMaxTotalDifficulty": 50,			# Maximum total difficulty cap	#	Default : 50

	# ========================================
	# CRISIS TRIGGERS
	# ========================================
	# These settings control what triggers the Colony Crisis event

	# --- General ---
	"draconisReputationThreshold": 0.5,					# Required reputation (with commission) to avoid hostilities	#	Default : 0.5

	# --- Heavy Armaments Competition ---
	# Producing heavy armaments (hand weapons) competes with Draconis and raises hostility
	"draconisMinCompetitorProduction": 4,				# Minimum production units to trigger competition	#	Default : 4
	"draconisMinCompetitorMarketSize": 4,				# Minimum market size to be considered a competitor	#	Default : 4
	"draconisCompetitionProgressRate": 1.3,             # Crisis progress per unit produced	#	Default : 1.3
	"draconisCompetitionMagnitude": 0.02,				# Shadow Fleet spawn rate per unit in system	#	Default : 0.02
	"draconisCompetitionMaxMagnitude": 0.5,				# Maximum spawn rate cap per system	#	Default : 0.5

	# --- AI Core Usage ---
	# Using AI cores makes your colonies high-value targets
	# (Cores are weighted: Alpha=3x, Beta=2x, Gamma=1x)
	"draconisAICoreProgressRate": 0.75,					# Crisis progress per weighted AI core	#	Default : 0.75
	"draconisAICoreMagnitude": 0.05,					# Shadow Fleet spawn rate per weighted core	#	Default : 0.05
	"draconisAICoreMaxMagnitude": 0.75,					# Maximum spawn rate cap per system	#	Default : 0.75

	# --- Rewards ---
	# Beating the Crisis gives you this buff to production
	"draconisArmamentsExportBonus": 0.25,				# Heavy armaments export bonus after defeating expedition (25% = 0.25)	#	Default : 0.25

	# ========================================
	# AI CORE THEFT SYSTEM
	# ========================================
	# Successful Draconis raids will attempt to steal AI cores from colonies

	"draconisAICoreTheft": { # Configuration for Draconis AI core theft system
		"factionCoreChances": { # Chance to find/steal cores from factions that should have them lore-wise
			"tritachyon": { # Tri-Tachyon: High-tech faction, likely to have AI cores
				"alphaChance": 0.15,
				"betaChance": 0.35,
				"gammaChance": 0.50,
				"minMarketSize": 5
			},
			"hegemony": { # Hegemony: Anti-AI but might have captured/confiscated cores
				"alphaChance": 0.05,
				"betaChance": 0.20,
				"gammaChance": 0.40,
				"minMarketSize": 6
			},
			"persean": { # Persean League: Moderate tech level
				"alphaChance": 0.05,
				"betaChance": 0.15,
				"gammaChance": 0.35,
				"minMarketSize": 5
			},
			"diktat": { # Sindrian Diktat: Wealthy, likely to have some cores
				"alphaChance": 0.08,
				"betaChance": 0.20,
				"gammaChance": 0.40,
				"minMarketSize": 5
			},
			"independent": { # Independent: Variable, some might have cores
				"alphaChance": 0.02,
				"betaChance": 0.10,
				"gammaChance": 0.25,
				"minMarketSize": 5
			},
			"player": { # Player always uses actual installed cores, never fallback
				"alphaChance": 0.0,
				"betaChance": 0.0,
				"gammaChance": 0.0,
				"minMarketSize": 99
				}
			},
		"fallbackBehavior": { # Fallback enabled - prefer actual cores, generate fallback if none found
			"maxCoresPerRaid": 3,
			"preferActualCores": true
		},
		"stolenCoreDestination": { # Larger Draconis markets are more likely to receive stolen cores
			"preferLargeMarkets": true,
			"marketSizeWeight": 2.0
		}
	},

	# ========================================
	# AI CORE FLEET SCALING
	# ========================================
	# Draconis gradually uses more AI cores in their fleets as the game progresses
	# AI cores only fill empty officer slots (do NOT replace human officers)

	"draconisAICoreScaling": {
		"enabled": true,						# Enable/disable AI core fleet scaling	#	Default : true
		"testCycleOverride": -1,				# DEBUG: Override game cycle for testing (-1 = disabled, X = test at that cycle)	#	Default : -1
		"recheckIntervalDays": 120.0,			# How often to recheck fleets for new empty slots (in days)	#	Default : 120.0

		# Cycle thresholds defining the scaling curve
		# NOTE: Starsector campaigns start at cycle ~206, so these are absolute cycle numbers
		"cycleThresholds": {
			"earlyGameEnd": 211.0,				# No AI cores before this cycle (206+5)	#	Default : 211.0
			"midGameStart": 211.0,				# Start adding AI cores (206+5)	#	Default : 211.0
			"midGameEnd": 226.0,				# Transition point (206+20)	#	Default : 226.0
			"lateGameStart": 226.0,				# More AI cores begin appearing (206+20)	#	Default : 226.0
			"lateGameEnd": 256.0,				# Heavy AI core usage (206+50)	#	Default : 256.0
			"endGameStart": 256.0,				# Very heavy usage begins (206+50)	#	Default : 256.0
			"endGameEnd": 306.0					# Maximum saturation (206+100)	#	Default : 306.0
		},

		# Coverage percentages (how many empty officer slots to fill with AI cores)
		"coveragePercentages": {
			"earlyGame": 0.0,					# 0% at cycles 1-5		#	Default : 0.0
			"midGame": 0.30,					# 30% at cycle 20		#	Default : 0.30
			"lateGame": 0.70,					# 70% at cycle 50		#	Default : 0.70
			"endGame": 1.0						# 100% at cycle 100+	#	Default : 1.0
		},

		# Core type distribution weights (interpolated between milestones)
		"coreTypeWeights": {
			"earlyMidGame": {					# Cycles 5-20: Only Gamma cores
				"gamma": 1.0,
				"beta": 0.0,
				"alpha": 0.0
			},
			"midGame": {						# Cycle 20: Still only Gamma
				"gamma": 0.9,
				"beta": 0.1,
				"alpha": 0.0
			},
			"midLateGame": {					# Cycles 20-50: Mostly Gamma, some Beta
				"gamma": 0.75,
				"beta": 0.2,
				"alpha": 0.05
			},
			"lateGame": {						# Cycles 50-100: Mix of all types
				"gamma": 0.5,
				"beta": 0.4,
				"alpha": 0.1
			},
			"endGame": {						# Cycle 100+: Full distribution
				"gamma": 0.35,
				"beta": 0.5,
				"alpha": 0.15
			}
		}
	},

