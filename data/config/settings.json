	# DRACONIS FLEET AI CCORE THEFT SETTINGS
	# ========================================

  "draconisAICoreTargeting": { # For Nexerelin
		"enabled": true,
		"scanIntervalDays": 15,
		"intelDecayDays": 60,
		"minMarketSize": 4,
		"vengeancePoints": {
			"alphaCore": 15,
			"betaCore": 10,
			"gammaCore": 5
		},
		"stabilityPenalty": 1,
		"groundDefensePenalty": 0.15
	},

	"draconisAICoreTheft": { # Configuration for Draconis AI core theft system
		"factionCoreChances": { # Chance to find/steal cores from factions that should have them lore-wise
			"tritachyon": { # Tri-Tachyon: High-tech faction, likely to have AI cores
				"alphaChance": 0.15,
				"betaChance": 0.35,
				"gammaChance": 0.50,
				"minMarketSize": 5
			},
			"hegemony": { # Hegemony: Anti-AI but might have captured/confiscated cores
				"alphaChance": 0.05,
				"betaChance": 0.20,
				"gammaChance": 0.40,
				"minMarketSize": 6
			},
			"persean": { # Persean League: Moderate tech level
				"alphaChance": 0.05,
				"betaChance": 0.15,
				"gammaChance": 0.35,
				"minMarketSize": 5
			},
			"diktat": { # Sindrian Diktat: Wealthy, likely to have some cores
				"alphaChance": 0.08,
				"betaChance": 0.20,
				"gammaChance": 0.40,
				"minMarketSize": 5
			},
			"independent": { # Independent: Variable, some might have cores
				"alphaChance": 0.02,
				"betaChance": 0.10,
				"gammaChance": 0.25,
				"minMarketSize": 5
			},
			"player": { # Player always uses actual installed cores, never fallback
				"alphaChance": 0.0,
				"betaChance": 0.0,
				"gammaChance": 0.0,
				"minMarketSize": 99
				}
			},
		"fallbackBehavior": { # Max cores to generate if none found; prefer real cores if available
			"maxCoresPerRaid": 3,
			"preferActualCores": true
		},
		"stolenCoreDestination": { # Larger Draconis markets are more likely to receive stolen cores
			"preferLargeMarkets": true,
			"marketSizeWeight": 2.0
		}
	},

