	# ========================================
	# DRACONIS FLEET HOSTILE ACTIVITY SETTINGS
	# ========================================

	# --- General Settings ---
	"draconisMaxFleets": 12,							# Max number of fleets in a single system	#	Default : 12
	"draconisExpeditionEventFrequency": 10.0,			# Event trigger frequency	#	Default : 10

	# --- Awarded Bonus Settings ---
	"draconisArmamentsExportBonus": 0.25,				# Production bonus percentage (25% = 0.25)	#	Default : 0.25

	# --- Reputation & Commission ---
	"draconisReputationThreshold": 1.0,					# Required reputation to avoid hostilities	#	Default : 1.0

	# --- Patrol Fleet Settings ---
	"draconisPatrolDifficultyBase": 4.0,				# Base difficulty for patrol fleets	#	Default : 4.0
	"draconisPatrolDifficultyMult": 4.0,				# Multiplier for market presence (difficulty = base + presence * mult)	#	Default : 4.0

	# --- Expedition Timing ---
	"draconisExpeditionPrepDaysMin": 14.0,				# Minimum preparation days before launch	#	Default : 14.0
	"draconisExpeditionPrepDaysVariance": 14.0,			# Random variance in prep days (0 to variance)	#	Default : 14.0
	"draconisExpeditionPayloadDaysMin": 27.0,			# Minimum travel/payload days	#	Default : 27.0
	"draconisExpeditionPayloadDaysVariance": 7.0,		# Random variance in payload days	#	Default : 7.0

	# --- Expedition Fleet Strength ---
	"draconisExpeditionDifficultyBase": 8.0,			# Base difficulty multiplier (reduced from 15)	#	Default : 8.0
	"draconisExpeditionDifficultyMinFactor": 0.5,		# Minimum difficulty factor	#	Default : 0.5
	"draconisExpeditionDifficultyMaxFactor": 0.5,		# Additional scaling with market presence	#	Default : 0.5
	"draconisExpeditionMinTotalDifficulty": 10.0,		# Minimum total difficulty (won't fire below this)	#	Default : 10.0
	"draconisExpeditionMaxTotalDifficulty": 40,			# Maximum total difficulty cap (like base game)	#	Default : 40
	"draconisExpeditionLeadFleetSize": 8,				# Lead fleet difficulty/size (reduced from 10)	#	Default : 8
	"draconisExpeditionFleetSizeMin": 1,				# Min difficulty for additional fleets	#	Default : 1
	"draconisExpeditionFleetSizeMax": 7,				# Max difficulty for additional fleets (reduced from 9)	#	Default : 7

	# --- Competition Thresholds ---
	"draconisMinCompetitorProduction": 4.0,				# Min heavy armaments production to trigger competition	#	Default : 4.0
	"draconisMinCompetitorMarketSize": 4.0,				# Min market size to be considered a competitor	#	Default : 4.0
	"draconisProgressPerUnitProdMult": 0.6,				# Progress increase per unit produced (Tri-Tach uses 0.5)	#	Default : 0.6
	"draconisMagnitudePerUnitProduction": 0.02,			# Magnitude contribution per unit in system	#	Default : 0.02
	"draconisMaxMagnitude": 0.5,						# Maximum magnitude cap per system	#	Default : 0.5

	# ========================================
	# DRACONIS AI CORE THEFT SETTINGS
	# ========================================
	# AI Core raids use the same difficulty scaling as punitive expeditions
	# (draconisExpeditionDifficultyBase, draconisExpeditionDifficultyMinFactor, etc.)
	# plus a small bonus based on AI core value at the target

	"draconisAICoreTheft": { # Configuration for Draconis AI core theft system
		"factionCoreChances": { # Chance to find/steal cores from factions that should have them lore-wise
			"tritachyon": { # Tri-Tachyon: High-tech faction, likely to have AI cores
				"alphaChance": 0.15,
				"betaChance": 0.35,
				"gammaChance": 0.50,
				"minMarketSize": 5
			},
			"hegemony": { # Hegemony: Anti-AI but might have captured/confiscated cores
				"alphaChance": 0.05,
				"betaChance": 0.20,
				"gammaChance": 0.40,
				"minMarketSize": 6
			},
			"persean": { # Persean League: Moderate tech level
				"alphaChance": 0.05,
				"betaChance": 0.15,
				"gammaChance": 0.35,
				"minMarketSize": 5
			},
			"diktat": { # Sindrian Diktat: Wealthy, likely to have some cores
				"alphaChance": 0.08,
				"betaChance": 0.20,
				"gammaChance": 0.40,
				"minMarketSize": 5
			},
			"independent": { # Independent: Variable, some might have cores
				"alphaChance": 0.02,
				"betaChance": 0.10,
				"gammaChance": 0.25,
				"minMarketSize": 5
			},
			"player": { # Player always uses actual installed cores, never fallback
				"alphaChance": 0.0,
				"betaChance": 0.0,
				"gammaChance": 0.0,
				"minMarketSize": 99
				}
			},
		"fallbackBehavior": { # Fallback enabled - prefer actual cores, generate fallback if none found
			"maxCoresPerRaid": 3,
			"preferActualCores": true
		},
		"stolenCoreDestination": { # Larger Draconis markets are more likely to receive stolen cores
			"preferLargeMarkets": true,
			"marketSizeWeight": 2.0
		}
	},

