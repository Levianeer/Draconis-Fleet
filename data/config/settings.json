	"draconisExpeditionFleetSizeMax": 12,				# Max difficulty for additional fleets	#	Default : 12

	# --- Competition Thresholds ---
	"draconisMinCompetitorProduction": 4.0,				# Min heavy armaments production to trigger competition	#	Default : 4.0
	"draconisMinCompetitorMarketSize": 4.0,				# Min market size to be considered a competitor	#	Default : 4.0
	"draconisProgressPerUnitProdMult": 3.5,				# Progress increase per unit produced	#	Default : 3.5
